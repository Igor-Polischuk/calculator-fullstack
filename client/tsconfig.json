{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@modules/*": ["modules/*"],
      "@utilities/*": ["utilities/*"],
      "@common/*": ["common/*"],

    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "suppressExperimentalDecorators": true
}