{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "ES6"
        ],
        "module": "CommonJS",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@routers/*": ["routers/*"],
            "@controllers/*": ["controllers/*"],
            "@services/*": ["services/*"],
            "@errors/*": ["errors/*"],
            "@utils/*": ["utils/*"]
        },
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "lib": ["esnext"],
    "ts-node": {
        "esm": true
    }
}